{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "outDir": "./cjs",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src"],
  "exclude": ["./src/constants/.macros", "./src/__tests__"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
